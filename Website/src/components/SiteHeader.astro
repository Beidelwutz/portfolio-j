const baseUrl = isHomePage ? "" : "/";
---
<header class="site-header" id="site-header">
  <div class="site-header-inner">
    <a href="/" class="site-logo" aria-label="Startseite">
      jpgjenny<span>.me</span>
    </a>
    <nav id="site-nav" class="site-nav" aria-label="Hauptnavigation">
      <a href={`${baseUrl}#fotos`} class="nav-link nav-link--desktop-only">Fotografie</a>
      <a href={`${baseUrl}#videos`} class="nav-link nav-link--desktop-only">Videografie</a>
      <a href={`${baseUrl}#clips`} class="nav-link nav-link--desktop-only">Short Content</a>
      <a href={`${baseUrl}#leistungen`} class="nav-link nav-link--desktop-only">Was ich mache</a>
