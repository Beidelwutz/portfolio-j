---
import ServiceIcon, { type ServiceType } from "./ServiceIcon.astro";

type Category = "Videografie" | "Short Content" | "Fotografie";
const { category }: { category: Category } = Astro.props;

const items: {
  title: string;
  type: "video" | "image";
  category: Category;
  views: number;
  likes: number;
  services: ServiceType[];
  image?: string;
  imageFull?: string;
  video?: string;
  subtitle?: string;
  artist?: string;
  link?: string;
}[] = [
  // Videografie (4)
  { title: "mooniac", subtitle: "Behind the scene brand content", artist: "@mooniac", type: "video", category: "Videografie", views: 136000, likes: 2500, services: ["video", "post", "produktion", "konzept"], image: "/uploads/videos/MOONIAC_Shooting_3_v01_low.webp" },
  { title: "MissesVlog", subtitle: "YouTube Content", artist: "@MissesVlog", type: "video", category: "Videografie", views: 144000, likes: 12000, services: ["post"], image: "/uploads/videos/Kelly_Shooting_2_v01_low.webp" },
  { title: "Kaffee mit Zitrone", subtitle: "Video Podcast", artist: "@dagibee @tinadzialas", type: "video", category: "Videografie", views: 54800, likes: 0, services: ["post"], image: "/uploads/videos/Kaffee_mit_Zitrone_1_v01_low.webp" },
  { title: "Henkes Corner", subtitle: "Video Podcast", artist: "@henkescorner", type: "video", category: "Videografie", views: 24700, likes: 1100, services: ["video", "post", "produktion", "konzept"], image: "/uploads/videos/Henkes_Corner_1_v01_low.webp" },
  // Short Content (3)
  { title: "Kelly Short #3", subtitle: "TikTok / Reel", artist: "@kel", type: "video", category: "Short Content", views: 67500, likes: 4320, services: ["video", "post", "konzept"], image: "/uploads/clips/Kelly_Short_03_v01.webp", video: "/uploads/clips/Clip_Kelly_Full_01_v01.mp4" },
  { title: "Kelly Short #2", subtitle: "TikTok / Reel", artist: "@kel", type: "video", category: "Short Content", views: 156900, likes: 9020, services: ["video", "post", "produktion"], image: "/uploads/clips/Kelly_Short_02_v01.webp", video: "/uploads/clips/Clip_Kelly_Full_02_v01.mp4" },
  { title: "Monte Short", subtitle: "TikTok / Reel", artist: "@monte", type: "video", category: "Short Content", views: 0, likes: 0, services: ["video", "post"], image: "/uploads/clips/Monte_Short_01_v01.webp", video: "/uploads/clips/Monte_Short_01_v01.mov" },
  // Fotografie (5)
  { title: "Nessi", artist: "@nessiontour", type: "image", category: "Fotografie", views: 56400, likes: 3010, services: ["post", "konzept"], image: "/uploads/fotos/Nessi_1_V01_low.webp" },
  { title: "Sido", artist: "@shawnstein", type: "image", category: "Fotografie", views: 73300, likes: 4150, services: ["post", "konzept"], image: "/uploads/fotos/Sido_1_V01.jpg" },
  { title: "Trymacs", artist: "@trymacs", type: "image", category: "Fotografie", views: 48900, likes: 2870, services: ["foto", "post", "konzept"], image: "/uploads/fotos/Trymacs_1_V01_low.webp", imageFull: "/uploads/fotos/Trymacs_1_V01_high.webp" },
  { title: "Rose", artist: "@realrosemondy @maximal_schradin", type: "image", category: "Fotografie", views: 62100, likes: 3540, services: ["post", "konzept"], image: "/uploads/fotos/Rose_1_V01_low.webp", imageFull: "/uploads/fotos/Rose_1_V01_high.webp" },
  { title: "Kelly", artist: "@kel", type: "image", category: "Fotografie", views: 98700, likes: 5820, services: ["foto", "post", "konzept", "produktion"], image: "/uploads/fotos/Kelly_Covershoot_1_V01_low.webp", imageFull: "/uploads/fotos/Kelly_Covershoot_1_V01_High.webp", link: "/projekte/kel" },
];

const filtered = items.filter((item) => item.category === category);

const formatCount = (value: number) => {
  if (value >= 1_000_000) return `${(value / 1_000_000).toFixed(1)}M`.replace(".0", "");
  if (value >= 1_000) return `${(value / 1_000).toFixed(1)}k`.replace(".0", "");
  return `${value}`;
};
---
<div class="portfolio-grid reveal" data-reveal>
  {filtered.map((item, index) => (
    <article
      class={`portfolio-card${item.video ? ' portfolio-card--short' : ''}`}
      style={`--stagger: ${index}`}
      data-lightbox={!item.link && !item.video}
      data-link={item.link}
      data-title={item.title}
      data-type={item.type}
      data-short-player={item.video ? "true" : undefined}
      tabindex="0"
      aria-label={`${item.title}. ${formatCount(item.views)} Aufrufe${item.likes > 0 ? `, ${formatCount(item.likes)} Likes` : ''}.`}
    >
      <div class="media" aria-hidden="true">
        {item.image && (
          <img src={item.image} alt={item.title} class={item.video ? 'short-thumb' : ''} data-full={item.imageFull || item.image} />
        )}
        {item.video && (
          <>
            <video 
              class="short-video" 
              src={item.video} 
              muted 
              loop 
              playsinline 
              preload="none"
            />
            <button class="short-play-btn" aria-label="Video abspielen">
              <svg viewBox="0 0 24 24" fill="currentColor">
                <path d="M8 5v14l11-7z"/>
              </svg>
            </button>
            <button class="short-mute-btn" aria-label="Ton ein/aus">
              <svg class="mute-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M11 5L6 9H2v6h4l5 4V5z"/>
                <line x1="23" y1="9" x2="17" y2="15"/>
                <line x1="17" y1="9" x2="23" y2="15"/>
              </svg>
              <svg class="unmute-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M11 5L6 9H2v6h4l5 4V5z"/>
                <path d="M19.07 4.93a10 10 0 0 1 0 14.14M15.54 8.46a5 5 0 0 1 0 7.07"/>
              </svg>
            </button>
            <div class="short-progress">
              <div class="short-progress__bar"></div>
            </div>
          </>
        )}
        {category !== "Fotografie" && (
          <div class="stats-bar" aria-hidden="true">
            <span class="stats-badge stats-badge--views">
              <span class="stats-badge__icon stats-badge__icon--eye" aria-hidden="true">
                <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/><circle cx="12" cy="12" r="3"/></svg>
              </span>
              <span class="stats-badge__count" data-value={item.views}>{formatCount(item.views)}</span>
            </span>
            {item.likes > 0 && (
              <>
                <span class="stats-bar__divider" aria-hidden="true"></span>
                <span class="stats-badge stats-badge--likes">
                  <span class="stats-badge__icon stats-badge__icon--heart" aria-hidden="true">
                    <svg class="heart-outline" width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"/></svg>
                    <svg class="heart-filled" width="12" height="12" viewBox="0 0 24 24" fill="currentColor" stroke="none" aria-hidden="true"><path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"/></svg>
                  </span>
                  <span class="stats-badge__count" data-value={item.likes}>{formatCount(item.likes)}</span>
                </span>
              </>
            )}
          </div>
        )}
      </div>
      <div class="label">
        <div class="eyebrow">{item.subtitle || item.category}</div>
        <div class="label__title">{item.title}</div>
        {item.artist && <div class="label__artist">{item.artist}</div>}
        <div class="service-icons">
          {item.services.map((service) => (
            <ServiceIcon service={service} size="sm" />
          ))}
        </div>
      </div>
    </article>
  ))}
  
  {category === "Videografie" && (
    <a href="#highlights" class="portfolio-card portfolio-card--cta" style={`--stagger: ${filtered.length}`}>
      <div class="cta-content">
        <div class="cta-icon">
          <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
            <path d="M5 12h14M12 5l7 7-7 7"/>
          </svg>
        </div>
        <div class="cta-text">
          <span class="cta-label">Mehr erfahren</span>
          <span class="cta-title">Projekte im Detail</span>
        </div>
      </div>
    </a>
  )}
  
  {category === "Fotografie" && (
    <a href="#kontakt" class="portfolio-card portfolio-card--cta" style={`--stagger: ${filtered.length}`}>
      <div class="cta-content">
        <div class="cta-icon">
          <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
            <path d="M12 5v14M5 12h14"/>
          </svg>
        </div>
        <div class="cta-text">
          <span class="cta-label">Bock auf ein Shooting?</span>
          <span class="cta-title">Kontaktiere mich</span>
        </div>
      </div>
    </a>
  )}
</div>
