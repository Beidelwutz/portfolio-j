---
import ServiceIcon, { type ServiceType } from "./ServiceIcon.astro";

const services: {
  id: ServiceType;
  label: string;
  description: string;
}[] = [
  { id: "foto", label: "Fotografie", description: "Professionelle Bildaufnahmen und visuelle Konzepte" },
  { id: "video", label: "Videografie", description: "Videodreh und Bewegtbild-Produktion" },
  { id: "post", label: "Postproduktion", description: "Schnitt, Colorgrading und Bearbeitung" },
  { id: "konzept", label: "Konzept", description: "Kreative Leitung und Storytelling" },
  { id: "produktion", label: "Produktion", description: "Projektleitung und Organisation" },
];

const tools: {
  abbr: string;
  name: string;
  color: string;
}[] = [
  { abbr: "Ps", name: "Photoshop", color: "#31A8FF" },
  { abbr: "Lr", name: "Lightroom", color: "#31A8FF" },
  { abbr: "Pr", name: "Premiere Pro", color: "#9999FF" },
  { abbr: "Ae", name: "After Effects", color: "#9999FF" },
  { abbr: "Da", name: "DaVinci Resolve", color: "#FF6B4A" },
  { abbr: "Cn", name: "Canva", color: "#00C4CC" },
  { abbr: "Cc", name: "CapCut", color: "#000000" },
  { abbr: "iZ", name: "iZotope", color: "#6366F1" },
];
---

<div class="services-legend">
  <div class="services-legend__header">
    <span class="eyebrow">Leistungen</span>
    <h2 class="headline reveal" data-reveal>Was wir machen</h2>
    <p class="subtitle reveal" data-reveal>
      Diese Icons zeigen dir, wof√ºr wir bei jedem Projekt verantwortlich waren.
    </p>
  </div>
  <div class="services-legend__grid reveal" data-reveal>
    {services.map((service) => (
      <div class="legend-item">
        <div class="legend-icon">
          <ServiceIcon service={service.id} size="lg" showTooltip={false} linkToLegend={false} />
        </div>
        <div class="legend-content">
          <h3 class="legend-label">{service.label}</h3>
          <p class="legend-desc">{service.description}</p>
        </div>
      </div>
    ))}
  </div>

  <div class="tools-section reveal" data-reveal>
    <h3 class="tools-title">Programme & Tools</h3>
    <div class="tools-grid">
      {tools.map((tool) => (
        <div class="tool-badge" style={`--tool-color: ${tool.color}`}>
          <span class="tool-abbr">{tool.abbr}</span>
          <span class="tool-name">{tool.name}</span>
        </div>
      ))}
    </div>
  </div>
</div>
