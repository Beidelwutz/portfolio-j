---
interface Deliverable {
  category: string;
  items: string[];
  icon?: string;
}

interface Props {
  deliverables: Deliverable[];
}

const { deliverables } = Astro.props;

const icons: Record<string, string> = {
  formate: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="3" y="3" width="18" height="18" rx="2"/><path d="M9 3v18M3 9h18"/></svg>`,
  plattformen: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"/><path d="M2 12h20M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"/></svg>`,
  assets: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M13 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V9z"/><polyline points="13 2 13 9 20 9"/></svg>`,
};
---

<section id="deliverables" class="deliverables-section" data-section>
  <div class="deliverables-section__inner">
    <div class="deliverables-section__header reveal">
      <span class="deliverables-section__label">Deliverables</span>
      <h2 class="deliverables-section__title">Was geliefert wurde</h2>
    </div>
    
    <div class="deliverables-grid reveal">
      {deliverables.map((del) => (
        <div class="deliverable-card">
          <div class="deliverable-card__icon" set:html={icons[del.category.toLowerCase()] || icons.assets} />
          <h3 class="deliverable-card__title">{del.category}</h3>
          <ul class="deliverable-card__list">
            {del.items.map((item) => (
              <li>{item}</li>
            ))}
          </ul>
        </div>
      ))}
    </div>
  </div>
</section>
