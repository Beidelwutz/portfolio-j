---
import BaseLayout from "../layouts/BaseLayout.astro";
import Section from "../components/Section.astro";
import Hero from "../components/Hero.astro";
import FeaturedProjects from "../components/FeaturedProjects.astro";
import PortfolioGrid from "../components/PortfolioGrid.astro";
import ServicesLegend from "../components/ServicesLegend.astro";
import ContactForm from "../components/ContactForm.astro";
---
<BaseLayout title="Portfolio · Beidelwutz" description="Von der Idee zum fertigen Ergebnis.">
  <main id="main">
    <!-- Progress / Kapitel-Navigation (wie bei Projektseiten) -->
    <nav class="home-progress" aria-label="Seitenfortschritt">
      <div class="home-progress__inner">
        <a href="#start" class="home-progress__item is-active" data-section="start">
          <span class="home-progress__dot"></span>
          <span class="home-progress__label">Start</span>
        </a>
        <a href="#highlights" class="home-progress__item" data-section="highlights">
          <span class="home-progress__dot"></span>
          <span class="home-progress__label">Projekte</span>
        </a>
        <a href="#videos" class="home-progress__item" data-section="videos">
          <span class="home-progress__dot"></span>
          <span class="home-progress__label">Videografie</span>
        </a>
        <a href="#clips" class="home-progress__item" data-section="clips">
          <span class="home-progress__dot"></span>
          <span class="home-progress__label">Short Content</span>
        </a>
        <a href="#fotos" class="home-progress__item" data-section="fotos">
          <span class="home-progress__dot"></span>
          <span class="home-progress__label">Fotografie</span>
        </a>
        <a href="#leistungen" class="home-progress__item" data-section="leistungen">
          <span class="home-progress__dot"></span>
          <span class="home-progress__label">Was ich mache</span>
        </a>
        <a href="#kontakt" class="home-progress__item" data-section="kontakt">
          <span class="home-progress__dot"></span>
          <span class="home-progress__label">Kontakt</span>
        </a>
      </div>
    </nav>

    <Section id="start" theme="light" variant="hero">
      <Hero />
    </Section>

    <Section id="highlights" theme="light">
      <FeaturedProjects />
    </Section>

    <Section id="videos" theme="light">
      <div class="stack">
        <span class="eyebrow">Portfolio</span>
        <h2 class="headline reveal" data-reveal>Videografie</h2>
        <p class="subtitle reveal" data-reveal>
          Content-Produktionen inklusive Postproduktion.
        </p>
        <PortfolioGrid category="Videografie" />
      </div>
    </Section>

    <Section id="clips" theme="light">
      <div class="stack">
        <span class="eyebrow">Portfolio</span>
        <h2 class="headline reveal" data-reveal>Short Content</h2>
        <p class="subtitle reveal" data-reveal>
          Kurzformate für Social Media Plattformen.
        </p>
        <PortfolioGrid category="Short Content" />
      </div>
    </Section>

    <Section id="fotos" theme="light">
      <div class="stack">
        <span class="eyebrow">Portfolio</span>
        <h2 class="headline reveal" data-reveal>Fotografie</h2>
        <p class="subtitle reveal" data-reveal>
          Für Web, Social Media und Print.
        </p>
        <PortfolioGrid category="Fotografie" />
      </div>
    </Section>

    <Section id="leistungen" theme="light">
      <ServicesLegend />
    </Section>

    <Section id="kontakt" theme="dark">
      <div class="grid-2">
        <div class="stack">
          <span class="eyebrow">Kontakt</span>
          <h2 class="headline reveal" data-reveal>Lass uns gemeinsam machen</h2>
          <p class="subtitle reveal" data-reveal>
            Beschreib kurz dein Projekt – ich antworte schnell und klar.
          </p>
        </div>
        <ContactForm />
      </div>
      <a href="#highlights" class="back-to-portfolio">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
          <path d="M12 19V5M5 12l7-7 7 7"/>
        </svg>
        <span>zum Portfolio</span>
      </a>
    </Section>

    <footer class="site-footer">
      <div class="site-footer__inner">
        <div class="site-footer__brand">
          <span class="site-footer__logo">Jenny<span>.</span></span>
          <p class="site-footer__tagline">Vom ersten Gedanken bis zum letzten Schnitt.</p>
        </div>
        <div class="site-footer__links">
          <a href="/faq">FAQ</a>
          <a href="/impressum">Impressum</a>
          <a href="https://instagram.com/jpgjenny" target="_blank" rel="noopener noreferrer">Instagram</a>
        </div>
        <p class="site-footer__copy">© 2026 Jenny. Alle Rechte vorbehalten.</p>
      </div>
    </footer>
  </main>

  <div class="lightbox" data-lightbox-overlay hidden>
    <div class="lightbox-content">
      <button class="lightbox-close" data-lightbox-close aria-label="Schließen">×</button>
      <div class="lightbox-media" data-lightbox-media></div>
      <div class="lightbox-title" data-lightbox-title></div>
    </div>
  </div>
</BaseLayout>
